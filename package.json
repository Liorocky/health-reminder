{
  "name": "health-reminder",
  "version": "1.0.0",
  "description": "一个简约好用的健康提醒网页应用，部署在 Cloudflare Pages 上",
  "main": "index.html",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:local": "node scripts/dev.js --local",
    "preview": "node scripts/dev.js --preview",
    "build-css": "tailwindcss -i ./src/input.css -o ./css/styles.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./css/styles.css --minify",
    "build": "npm run build-css-prod",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "clean": "echo \"No build artifacts to clean\" && exit 0"
  },
  "keywords": [
    "health",
    "reminder",
    "productivity",
    "timer",
    "cloudflare-pages",
    "web-app",
    "pomodoro",
    "wellness",
    "static-site"
  ],
  "author": "Lior",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Liorocky/health-reminder.git"
  },
  "bugs": {
    "url": "https://github.com/Liorocky/health-reminder/issues"
  },
  "homepage": "https://github.com/Liorocky/health-reminder#readme"
}
